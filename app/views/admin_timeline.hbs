{{> adminmenu _id='timeline'}}

<section class="ui raised segment">
    <div class="ui grid">
        <asside class="six wide column">
            <h4>Global timeline</h4>
            <div class="ui mini statistics">
                <div class="statistic">
                    <div class="value">
                        <i class="twitter icon"></i>
                        {{stats.posts}}
                    </div>
                    <div class="label">
                        Posts
                    </div>
                </div>
                <div class="statistic">
                    <div class="value">
                        <i class="history icon"></i>
                        {{stats.postsHour}}
                    </div>
                    <div class="label">
                        Last hour
                    </div>
                </div>
                <div class="statistic">
                    <div class="value">
                        <i class="users icon"></i>
                        {{stats.users}}
                    </div>
                    <div class="label">
                        Users
                    </div>
                </div>
            </div>
            <img src="images/admintimeline.jpg" class="ui large image">
        </asside>
        <article class="ten wide column">
            <form class="ui form" action="/adminDeleteTweet" method="POST">
                <table class="ui selectable striped table segment">
                    <thead>
                    <tr>
                        <th>Select</th>
                        <th></th>
                    </tr>
                    </thead>
                    <tbody>
                    {{#each tweets}}
                        <tr>
                            <td>
                                <div class="ui checkbox">
                                    <input type="checkbox" id="checkbox" name="tweet" value="{{_id}}">
                                    <label></label>
                                </div>
                            </td>
                            <td>
                                <div class="ui comments">
                                    <div class="comment">
                                        <a class="avatar">
                                            <img src="/images/{{sender.firstName}}.jpg" class="ui circular inline image">
                                            <span></span>
                                        </a>
                                        <div class="content">
                                            <a class="author">
                                                <button class="ui basic small button" id="senderEmail" formaction="/adminUser_timeline" value="{{sender.email}}"
                                                        name="email"><i class="twitter icon"></i>{{sender.firstName}} {{sender.lastName}}
                                                </button>
                                            </a>
                                            <div class="metadata">
                                                <div class="date">{{date}}</div>
                                                <div class="rating">
                                                    <i class="twitter icon"></i>
                                                    {{sender.followedBy.length}} Following
                                                </div>
                                            </div>
                                            <div class="text">
                                                {{text}}
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </td>
                        </tr>
                    {{/each}}
                    </tbody>
                    <tfoot class="full-width">
                    <tr>
                        <th colspan="4">
                            <div class="ui buttons">
                                <button class="ui positive submit button" id="delete_tweet"><i class="trash icon"></i>Selected
                                </button>
                                <div class="or"></div>
                                <button class="ui negative button" id="delete_all" formaction="/adminDeleteTweetsAll">
                                    <i class="trash icon"></i>All
                                </button>
                            </div>
                        </th>
                    </tr>
                    </tfoot>
                </table>
            </form>
        </article>
    </div>
    <div class="ui  divider"></div>
</section>