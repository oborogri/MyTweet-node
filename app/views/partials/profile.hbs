<section class="ui raised segment">
    <div class="ui two column grid">
        <div class="ui six wide column">
        <div class="ui card">
            <div class="image">
                <img src="/images/{{user.firstName}}.jpg">
            </div>
            <div class="content">
                <a> {{user.firstName}} {{user.lastName}}</a>
            </div>
        </div>
        </div>
        <div class="ui six wide column">
            <div class="ui raised segment">
                <form class="ui form" action="/adminUser_timeline"  method="POST">
                <div class="ui list">
                    <div class="item">
                        <i class="calendar icon"></i>
                        <div class="content">
                            Joined: {{user.joined}}
                        </div>
                    </div>
                    <div class="item">
                        <i class="mail icon"></i>
                        <div class="content">
                            {{user.email}}
                        </div>
                    </div>
                    <div class="item">
                        <i class="users icon"></i>
                        <div class="content">
                            {{user.followedBy.length}}
                            Followers
                        </div>
                    </div>
                    <div class="item">
                        <i class="twitter icon"></i>
                        <div class="content">
                            <button class="ui basic mini button" name="email" value="{{user.email}}"
                                    name="user">{{user.posts.length}} Posts</button>
                        </div>
                    </div>
                </div>
                </form>
            </div>
        </div>
    </div>
</section>