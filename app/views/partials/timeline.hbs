<section class="ui raised segment">
    <div class="ui grid">
        <asside class="six wide column">
            <h4 class="ui dividing header">Home timeline</h4>
            <div class="ui mini statistics" id="stats">
                <div class="statistic">
                    <div class="text value">
                        {{stats.firstName}}<br>
                        {{stats.lastName}}
                    </div>
                </div>
                <div class="statistic">
                    <div class="value">
                        <i class="twitter icon"></i>
                        {{stats.posts}}
                    </div>
                </div>
                <div class="statistic">
                    <div class="value">
                        <i class="users icon"></i>
                        {{stats.following}}
                    </div>
                </div>
            </div>
            <img src="images/timeline.png" class="ui medium image">
        </asside>
        <article class="ten wide column">
            <form class="ui form" action="/deleteTweet" method="POST">
                <table class="ui selectable striped table segment">
                    <thead>
                    <tr>
                        <th>Select</th>
                        <th></th>
                        <th></th>
                    </tr>
                    </thead>
                    <tbody>
                    {{#each tweets}}
                        <tr>
                            <td>
                                <div class="ui checkbox" id="checkbox">
                                    <input type="checkbox" name="tweet" value="{{_id}}">
                                    <label></label>
                                </div>
                            </td>
                            <td>
                                <div class="ui comments">
                                    <div class="comment">
                                        {{#if sender.picture.data}}
                                        <a class="avatar">
                                            <img src="/getUserPicture/{{sender.id}}" class="ui circular inline image">
                                            <span></span>
                                        {{/if}}
                                        </a>
                                        <div class="content">
                                            <div class="author">
                                                {{sender.firstName}} {{sender.lastName}}
                                            </div>
                                            <div class="metadata">
                                                <div class="date">{{date}}</div>
                                                <div class="rating">
                                                    <a><i class="twitter icon"></i>{{sender.followedBy.length}} Followers
                                                    </a>
                                                </div>
                                            </div>
                                            <div class="text">
                                                {{text}}
                                            </div>
                                            {{#if picture.data}}
                                                <div class="tweet_content">
                                                    <img src="/getPicture/{{_id}}" height="52" width="52" />
                                                </div>
                                            {{/if}}
                                        </div>
                                    </div>
                                </div>
                            </td>
                        </tr>
                    {{/each}}
                    </tbody>
                    <tfoot class="full-width">
                    <tr>
                        <th colspan="4">
                            <div class="ui buttons">
                                <button class="ui positive button" id="delete_tweet"><i class="trash icon"></i>Selected
                                </button>
                                <div class="or" id="or"></div>
                                <button class="ui negative button" id="delete_all" formaction="/userDeleteTweetsAll">
                                    <i class="trash icon"></i> All
                                </button>
                            </div>
                        </th>
                    </tr>
                    </tfoot>
                </table>
            </form>
        </article>
    </div>
</section>